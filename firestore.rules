rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /scores/{score} {
      allow read: if true;
      allow create: if request.auth != null && 
                   request.resource.data.name.size() == 3 &&
                   request.resource.data.score is number &&
                   request.resource.data.score >= 0;
    }
  }
}
